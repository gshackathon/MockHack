<h1>Listing products (Admin View)</h1>
<%
	# We should not be using tables. 
%>
<% @products.each do |product| %>
    <div class='product'>
        <div class='image'><%= image_tag product.imageUrl_url %></div>
        <div class='title'><%= product.title %></div>
        <div class='description'><%= product.description %></div>
        <div class='stock'><b>Available:</b> <%= product.stock %></div>
        <div class='price'><b>Price:</b> <%= product.price %></div>
        <div class='action'>
            <div><%= link_to 'Show', product %></div>
            <div><%= link_to 'Edit', edit_product_path(product) %></div>
            <div><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
    </div>
<% end %>

